[Unit]
Description=LLM FastAPI (port 8080)
After=network-online.target
Wants=network-online.target

[Service]
User=exx
Group=exx
WorkingDirectory=/home/exx/myCode/genai-agent-core
ExecStart=/home/exx/anaconda3/envs/mamba_env/envs/genai-core/bin/uvicorn main:app \
  --host 0.0.0.0 --port 8080 --proxy-headers --forwarded-allow-ips="*"
Restart=on-failure
RestartSec=2
TimeoutStopSec=5
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full

[Install]
WantedBy=multi-user.target
